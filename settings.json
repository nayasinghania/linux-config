// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "relative_line_numbers": "disabled",
  "gutter": {
    "runnables": false,
    "breakpoints": false,
    "line_numbers": true
  },
  "inline_code_actions": false,
  "diagnostics": {
    "button": false
  },
  "preview_tabs": {
    "enabled": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "edit_predictions": {
    "mode": "eager"
  },
  "toolbar": {
    "agent_review": false,
    "breadcrumbs": false,
    "selections_menu": false,
    "quick_actions": false
  },
  "tabs": {
    "file_icons": true,
    "close_position": "right",
    "git_status": true
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "search": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": false,
    "experimental.show": false
  },
  "project_panel": {
    "dock": "left",
    "button": false
  },
  "terminal": {
    "button": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "title_bar": {
    "show_onboarding_banner": true,
    "show_user_picture": true,
    "show_menus": false,
    "show_sign_in": true,
    "show_project_items": true
  },
  "agent": {
    "button": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "model_parameters": []
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": false,
  "base_keymap": "VSCode",
  "icon_theme": "Catppuccin Mocha",
  "ui_font_size": 16,
  "buffer_font_size": 14.0,
  "theme": "Catppuccin Mocha",
  "lsp": {
    "tinymist": {
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "root/site/public/$dir/$name"
      }
    }
  }
}
